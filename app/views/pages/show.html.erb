<div class="container my-5">
  <div class="row">
    <div class="col-md-8">
      <h1 class="mb-3"><%= @page.title %></h1>
      <div class="border p-3">
        <ul class="nav nav-pills" id="pills-tab" role="tablist">
          <% @page.tabs.each_with_index do |t,i| %>
            <li class="nav-item">
              <% if i == 0 %>
                <a class="nav-link active" id="pills-<%=t.title%>-tab" data-toggle="pill" href="#pills-<%=t.title%>" role="tab" aria-controls="pills-<%=t.title%>" aria-selected="true">
                  <%=t.title%>
                </a>
              <% else %>
                <a class="nav-link" id="pills-<%=t.title%>-tab" data-toggle="pill" href="#pills-<%=t.title%>" role="tab" aria-controls="pills-<%=t.title%>" aria-selected="true">
                  <%=t.title%>
                </a>
              <% end %>
            </li>
          <% end %>
        </ul>
        <hr>
        <div class="tab-content" id="pills-tabContent">
          <% @page.tabs.each_with_index do |t,i| %>
            <% if i == 0 %>
              <div class="tab-pane fade show active" id="pills-<%=t.title%>" role="tabpanel" aria-labelledby="pills-home-tab">
                <%=t.description.html_safe%>
              </div>
            <% else %>
              <div class="tab-pane fade" id="pills-<%=t.title%>" role="tabpanel" aria-labelledby="pills-home-tab">
                <%=t.description.html_safe%>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-md-4"></div>
    <div class="col-md-12 actions mt-5">
      <%= link_to 'Editar PÃ¡gina', edit_page_path(@page), class:"btn btn-primary" %>
      <a class="btn btn-secondary" href="/">Volver al inicio</a>
    </div>
  </div>



  
  
</div>

