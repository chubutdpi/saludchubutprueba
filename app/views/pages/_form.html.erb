<%= form_with(model: page, local: true) do |f| %>
  <% if page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(page.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
      <% page.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div id='tabs'>
    <div class="accordion" id="accordionExample">
      <%= f.fields_for :tabs do |tab| %>
        <%= render 'tab_fields', :f => tab %>
      <% end %>
    </div>
    <div class='links'>
      <%= link_to_add_association 'add tab', f, :tabs %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
