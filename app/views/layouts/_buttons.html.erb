<div class="buttons mb-4  bg-gray">
  <!-- Three columns of text below the carousel -->
  <div class="container">
    <div class="row text-center p-4 justify-content-center">
      <% if !(controller_name === "welcome") %>
      <div class="col-sm-6 col-md-2">
        <a href="/" type="button" class="btn btn-home btn-primary btn-rounded btn-icon bg-azul-chubut">
          <%= image_tag "icono_home.png", class:"img-fluid"%></a><br>
