        <a href="/notices" type="button" class="btn btn-home btn-primary btn-rounded btn-icon bg-azul-chubut"><%= image_tag "icono_news.png", class:"img-fluid"%></a><br>
        <span class="btn-home-text">Portal de Noticias</span>
      </div><!-- /.col-md-4 -->
      <% end %>
